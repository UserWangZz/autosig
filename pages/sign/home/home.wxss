.sign{
  height: 60%;
}

.box{
  width: 100%;
  height: 100%;
}

.UCenter-bg {
  /*background-image: url(https://image.weilanwl.com/color2.0/index.jpg);*/
  /*background-size: cover;*/
  height: 350rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: row;
  align-items: row;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.infoPanel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.infoSize {
  position: relative;
  margin: 15rpx;
  top: -100rpx;
}

.nickName {
  /*font-weight: bold;*/
  color:rgb(255, 255, 255);
}

.bac-pic{
  position: fixed;
  top: 0;
  width: 100%;
  /*height: 100%;*/
  z-index: -1;
}

.timeline-location {
  position: relative;
  top: -100rpx;
  background-color: rgba(0, 0, 0, 0);
}

.cu-timeline .font-size{
  position: relative;
  color: black;
}

.progBox{
  display: flex;
  justify-content: center;
}

.progBox .progLong{
  width:90%;
  height: 35rpx;
}

.progBox .progLong P{
  font-size: 27rpx;
  font-weight: bold;
}

.goto-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goto-group image {
  height: 300rpx;
}

.goto-group text{
  position: relative;
}

.goto-group button{
  position: relative;
  top: 50rpx;
  width: 350rpx;
  height: 75rpx;
}